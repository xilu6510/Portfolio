{  
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  }
}
